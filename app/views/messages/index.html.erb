
<div class="form-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            メッセージ一覧
        </div>
    
        <div class="panel-body">
            <% @messages.each do |message| %>
                <span class="label label-info"><%= message.name %></span>
            	<%= message.body %>
				(
				<%= link_to "edit" , edit_messages_path(message) %>
				<%= link_to "destroy" , messages_path , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
				)
            	<br>
            <% end %>
        </div>
    </div>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>