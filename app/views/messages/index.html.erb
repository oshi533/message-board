
<div class="form-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            メッセージ一覧
        </div>
    
        <div class="panel-body">
            <% @messages.each do |message| %>
                <span class="label label-info"><%= message.name %></span>
            	<%= message.body %>
            	<br>
            <% end %>
        </div>
    </div>
</div>

<%= form_for(@message) do |f| %>
	<div class="form-group">
		<div class="row">
			<div class="col-xs-4"> 
				<%= f.label :name , "名前:", class:"col-xs-4 control-label", for: "exampleInputName" %>
				<%= f.text_field :name ,:class => "form-control", id: "exampleInputName" %>
			</div>
		</div>
    </div>
	<div class="form-group">    
		<div class="row">
			<div class="col-xs-10"> 
				<%= f.label :name , "内容:", class:"col-xs-4 control-label", for: "exampleInputText" %>
				<%= f.text_area :body ,:class => "form-control", :rows => 6, id: "exampleInputText" %>
			</div>
		</div>
    </div>
	<div class="form-group">    
		<%= f.submit %>
    </div>
<% end %>

